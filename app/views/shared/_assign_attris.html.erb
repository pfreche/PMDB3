<div class='attriAssign'>
<table>
  <tr>
    <th>Name</th>
    <th>Agroup</th>
    <th>Id sort</th>
    <th>Parent</th>
    <th>Keycode</th>
    <th>Group</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
<% @attris = @media_object.attris
   @attris.each do |attri| %>
  <tr>
    <td><%= attri.name %></td>
    <td><%= attri.agroup_id %></td>
    <td><%= attri.id_sort %></td>
    <td><%= attri.parent_id %></td>
    <td><%= attri.keycode %></td>
    <td><%= attri.group_id %></td>
    <td><%= link_to 'Show', attri %></td>
    <td><%= link_to 'Edit', edit_attri_path(attri) %></td>
    <td><%= link_to 'Destroy', remove_attri_media_object_path(@media_object)+"?attri_id="+attri.id.to_s, confirm: 'Are you sure?', method: :delete%></td>
  </tr>
<% end %>
</table>

<% @attris = @media_object.attris
   @attris.each do |attri| %>
    <div class='attribute'> <%= attri.name %> 
    <%= link_to 'X', remove_attri_media_object_path(@media_object)+"?attri_id="+attri.id.to_s, confirm: 'Are you sure?', method: :delete%>
  </div>
 <% end %>

<%= form_tag add_attri_media_object_path(@media_object), remote: true do%>
<%=text_field_tag :name, @attri_name%>
<%= submit_tag "ADD"%>
<%if @newAttribute == true %>
<%=submit_tag "Create" %>
<%end%>

<% end%>


</div>
