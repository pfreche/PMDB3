<h1>Listing folders</h1>

<table>
  <tr>
    <th>Storage</th>
    <th>Mpath</th>
    <th>Lfolder</th>
    <th>Mediaobject</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @folders.each do |folder| %>
  <tr>
    <td><%= folder.storage_id %></td>
    <td><%= folder.mpath %></td>
    <td><%= folder.lfolder %></td>
    <td><%= folder.mediaObject_id %></td>
    <td><%= link_to 'Show', folder %></td>
    <td><%= link_to 'Edit', edit_folder_path(folder) %></td>
    <td><%= link_to 'Destroy', folder, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

